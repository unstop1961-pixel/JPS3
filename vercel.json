{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["data/**", "frontend/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/css/(.*)",
      "dest": "/api/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/api/js/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/api/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/[...slug].js"
    }
  ]
}
